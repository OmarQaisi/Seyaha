<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp">
        <TextView
            android:id="@+id/welcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/cairo"
            android:text="@string/login_welcome"
            android:textColor="@color/blue_logo"
            android:textSize="44sp"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/under_welcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_medium"
            android:text="@string/login_description"
            android:textAlignment="center"
            android:textColor="@color/dark_grey"
            android:textSize="14sp"
            android:layout_below="@id/welcome"
            android:layout_marginBottom="12dp"
            android:layout_centerHorizontal="true"/>

        <ImageView
            android:id="@+id/login_illustration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_login_illustration"
            android:layout_below="@id/under_welcome"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:id="@+id/login_continue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/login_continue"
            android:textColor="@color/dark_grey"
            android:fontFamily="@font/montserrat_medium"
            android:layout_marginBottom="8dp"
            android:textSize="18sp"

            android:layout_below="@id/login_illustration"
            android:layout_centerHorizontal="true"
            />
        <Button
            android:id="@+id/facbook_btn"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/facebook_btn_shape"
            android:drawableLeft="@drawable/ic_facebook_icon"
            android:fontFamily="@font/montserrat_medium"
            android:paddingLeft="30dp"
            android:paddingRight="70dp"
            android:text="facebook"
            android:textAlignment="center"
            android:textColor="@color/white_login_screen"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_below="@id/login_continue"
            android:layout_centerHorizontal="true"/>

           <Button
               android:id="@+id/gmail_btn"
               android:layout_width="250dp"
               android:layout_height="50dp"
               android:background="@drawable/gmail_btn_shape"
               android:drawableLeft="@drawable/ic_google_icon"
               android:fontFamily="@font/montserrat_medium"
               android:paddingLeft="30dp"
               android:paddingRight="70dp"
               android:text="gmail"
               android:textColor="@color/white_login_screen"
               android:textSize="16sp"
               android:textStyle="bold"
              android:layout_below="@id/facbook_btn"
               android:layout_centerHorizontal="true"
               android:layout_marginBottom="5dp"/>
        </RelativeLayout>
</ScrollView>